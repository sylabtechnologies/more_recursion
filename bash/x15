# grep all

function seek()
{
    var=$( grep "$MYGREP" $1)
    echo "$var" | wc -l
}

function traverse()
{
    for file in "$1"/*
    do
        if [ d "${file}" ]
        then
            traverse "${file}"
        else
            seek $file
        fi
    done
}

function main() {
    traverse "$PWD"
}

main "$1"
