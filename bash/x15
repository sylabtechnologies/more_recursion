# grep all
SearchDir()
{
    mydir=$PWD
    declare -a files=($(ls $1))

    for f in  ${files[@]}
    do
        if [ -f $f ]
        then
            grep "$MYGREP" $f
            if [ $? -eq 0 ]
            then
                echo "$PWD\$f"
            fi
        elif [ -d $f ]
        then
            cd $f
            SearchDir $f
            cd $mydir
        fi
    done
}

SearchDir $PWD

