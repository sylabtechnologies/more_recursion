while true
do
  read FOLDER
  if [ -d $FOLDER ]
  then
    OLDFOLDER="$PWD/$FOLDER"
    NEWFOLDER="$OLDFOLDER"b

    echo "copy to $NEWFOLDER :"

    mkdir $NEWFOLDER
    declare -a files=($(ls $OLDFOLDER))
    for f in  ${files[@]}
    do
      cp "$OLDFOLDER/$f $NEWFOLDER"
    done

  else
    break
  fi
done
