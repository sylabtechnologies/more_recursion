while true
do
  read FOLDER
  if [ -d $FOLDER ]
  then
    OLDFOLDER="$PWD/$FOLDER"
    NEWFOLDER="$OLDFOLDER"b

    echo "copy to $NEWFOLDER :"

    mkdir $NEWFOLDER
    declare -a files=($(ls $OLDFOLDER))
    count=0

    for f in  ${files[@]}
    do
      cp "$OLDFOLDER/$f" "$NEWFOLDER/$f"
      count=$((count + 1))
    done

    if (( $count == 1))
    then
        echo "copy 1 file"
    else
        echo "copy $count files"
    fi

  else
    break
  fi
done
