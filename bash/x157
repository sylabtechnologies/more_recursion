# grep all

function seek()
{
    var=$( grep "$MYGREP" $1 > /dev/null 2>&1 ; echo $?)
    if [ $var -eq 0 ]
    then
        echo $1
    fi
}

function traverse()
{
    for file in "$1"/*
    do
        if [ -d "${file}" ]
        then
            traverse "${file}"
        else
            seek $file
        fi
    done
}

function main() {
    traverse "$PWD"
}

main "$1"
