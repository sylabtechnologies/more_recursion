## mirror tinyserver.java
## FOR JAVA FILES = AGAIN FIND SIMPLEST ENCAPSULATION!

myserver="10.0.0.116"

cd "$HOME/bin/temp"

if [ -f "0" ]
then
    rm 0
fi

wget --timeout=2 --tries=1 "http://$myserver/0" > /dev/null 2>&1
echo "status $?"

declare -a lines=($(cat 0))

count=0
len=${#lines[@]}
while $TRUE
do
    echo ${lines[$count]}
    echo $count
    echo $len

    count=$((count + 3))
    if [ $((count)) -ge $((len)) ]
    then
        break
    fi
done
